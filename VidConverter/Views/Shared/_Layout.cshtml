<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - VidConverter</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" />

    <link rel="stylesheet" href="~/VidConverter.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm shadow-sm mb-3" style="background: linear-gradient(to right, #1c1c1c, #3a3a3a);">
            <div class="container-fluid">
                <a class="navbar-brand text-info fw-bold fs-3 d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-lightning-fill me-2"></i> QuickConvert
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <i class="bi bi-list navbar-toggler-icon"></i>
                </button>

                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-info fs-5 fw-bold active" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house-door-fill"></i> Home
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-info fs-5 fw-bold" asp-area="" asp-controller="Home" asp-action="Privacy">
                                <i class="bi bi-shield-lock-fill"></i> Privacy
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>


    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-section">
        <div class="container text-center">
            <p class="mb-1">
                <i class="bi bi-lightning-fill text-warning"></i> Powered by <span class="fw-bold">QuickConvert</span>
            </p>
            <p class="mb-0">
                &copy; 2024 - VidConverter |
                <a class="text-info fw-bold" asp-area="" asp-controller="Home" asp-action="Privacy">
                    <i class="bi bi-shield-lock-fill"></i> Privacy
                </a>
            </p>
            <p class="mt-2">
                Follow us:
                <a href="https://twitter.com" class="text-info ms-2"><i class="bi bi-twitter"></i></a>
                <a href="https://facebook.com" class="text-info ms-2"><i class="bi bi-facebook"></i></a>
                <a href="https://instagram.com" class="text-info ms-2"><i class="bi bi-instagram"></i></a>
            </p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/custom.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/aos/2.3.4/aos.js"></script>
    <script>
        AOS.init();
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
